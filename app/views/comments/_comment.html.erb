<% unless comment.archived?%>
    <h4> <%=comment.title%></h4>
    <h5><%= comment.user.name%></h4>
    <p><%= comment.body%></p>
    <%if isAdmin || current_user.id==comment.user.id%>
        <%= link_to "Supprimer", [comment.article, comment], class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "etes vous sur?"} %>
    <%else%>
    <%= link_to "Signaler", new_signalements_path(comment), class: "btn btn-warning" %>
    <%end%>
<%end%>
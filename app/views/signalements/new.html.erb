<%= form_with model: @signalement, url: signalements_path, html: {class: 'form-horizontal'} do |form| %>
    <div class="form-group">
       <%=form.label(:cause)%> <br>
        <%=form.text_field(:cause)%>
    </div>
    <%= form.hidden_field :comments, value: @comment.id%>
  <%= form.submit "Signaler", class:"btn btn-warning"%>
<%end%>

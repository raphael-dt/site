<div>
    <h1> <%= @article.title %> </h1>
    <p> <%= @article.body %> </p>
    <ul>
        <% if isEditor
            action=actionStatus(@article)%>
            <li>
                <%= link_to "modifier", edit_article_path(@article), class: "btn btn-default", type: "button" %>
            </li>
            
            <li>
                <%= link_to action['name'], action['linkroute'], class: "btn btn-warning", type: "button"%>
            </li>
        <% end%>
        <% if isAdmin%>
            <li> <%= link_to "supprimer", article_path(@article), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Etes vous sur"}%>
        <%end%>
    </ul>
</div>
<div>
    <h2> commentaire </h2>
        <%= render @article.comment%>
</div>
<div>
   <h2> Ajouter un commentaire </h2>
   <%= render 'comments/form' %>
</div>
<%= form_for @user, html: {class: 'form-horizontal'} do |form|%>
    <div class="form-group">
        <%= form.label :name,  "Nom d'utilisateur", class: 'col-md-4 control-label'%>
        <div class="col-md-6">
            <%= form.text_field :name, class: 'form-control'%>
        </div>
    </div>
    <div class="form-group">
        <%= form.label :password, "Mot de passe", class: 'col-md-4 control-label'%>
        <div class="col-md-6">
            <%= form.password_field :password, class: 'form-control'%>
        </div>
    </div>
    <div class="form-group">
        <%= form.label :password_confirmation, "Confirmer le mot de passe", class: 'col-md-4 control-label'%>
        <div class="col-md-6">
            <%= form.password_field :password_confirmation, class: 'form-control'%>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
            <%= form.submit "S'inscrire",class:"btn btn-primary"%>
        </div>
    </div>
    <% @user.errors.full_messages_for(:status).each do |message| %>
        <div><%=message %> </div>
    <% end %>
<%end%>
